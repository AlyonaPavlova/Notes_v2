extends ../layouts/default

block content
	.container: .row: .col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
		article
			p: a(href='/notes') &larr; back to the notes
			hr
			if !data.note
				h2 Invalid Note.
			else
				header
					h1= data.note.title
					h5 Posted 
						if data.note.publishedDate
							| on #{data.note._.publishedDate.format('MMMM Do, YYYY')} 
						if data.note.tags && data.note.tags.length
							| in 
							each cat, cat_i in data.note.tags
								a(href='/notes/' + cat.key)= cat.name
								if cat_i < data.note.tags.length - 1
									| , 
								else
									|  
						if data.note.author
							| by #{data.note.author.name.first}
				
				.note
					!= data.note.content.full
